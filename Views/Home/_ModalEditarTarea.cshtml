<div class="modal fade" id="modal-editar-tarea" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-editar-tarea-titulo" data-bind="text: titulo"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                
                <div class="row">
                    <div class="col-lg-9">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="txtTituloCrearTarea" 
                                placeholder="titulo" 
                                autocomplete="off"
                                data-bind="value: titulo, event: {change: manejarCambioEditarTarea }"/>
                            <label for="txtTituloCrearTarea" class="form-label">Titulo de la tarea</label>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Descripcion</label>
                            <textarea class="form-control" rows="4"
                                data-bind="value: descripcion, event: {change: manejarCambioEditarTarea }">
                            </textarea>
                        </div>
                        <div class="mb-3">
                            <partial name="_Pasos" />
                        </div>
                        <div class="mb-3">
                            <partial name="_ArchivosAdjuntos" />
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <button data-bind="{click: intentarBorraTarea}"
                            class="btn btn-secondary mb-2 w-100 text-start">
                            <i cite="bi bi-x-lg"></i>
                            Borrar Tarea
                        </button>
                    </div>
                </div>
            </div>
            

        </div>
    </div>
</div>